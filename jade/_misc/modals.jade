mixin product-create()
	#product-create.modal.micromodal-slide(aria-hidden='true')
		.modal__overlay(tabindex='-1' data-micromodal-close)
			.modal__container(role='dialog' aria-modal='true' aria-labelledby='modal-1-title')
				.modal__header
					button.modal__close(aria-label='Close modal' data-micromodal-close)
						+icon('close')
					.modal__title Создание Товара
				main.modal__content
					form(action="#" class="form form-columns")
						.form__block
							label.form__label(for="product-create-name") Наименование
							input(id="product-create-name" autocomplete="off" type="text" name="product-create-name" class="form__input" placeholder="Название товара")
							
							//- label.form__label(for="description") Событие
							//- textarea(id="description" autocomplete="off"  name="" class="form__area" placeholder="Описание товара")
						.form__column
							label.form__label(for="product-create-count") Количество
							input(id="product-create-count" autocomplete="off" type="text" name="product-create-count" class="form__input" placeholder="Количество товара")
						.form__column
							label.form__label(for="event-field") Цена
							input(id="product-create-price" autocomplete="off" type="text" name="product-create-price" class="form__input" placeholder="Цена")

						.form__block
							label.form__label(for="product-create-description") Описание
							textarea(id="product-create-description" autocomplete="off"  name="product-create-description" class="form__area" placeholder="Описание товара")

						.form__block
							.form__label.form__label--file Загрузить фото	
							.form__thumbs
								//- .form__thumb._fit
								//- 	img._fit-img(src="img/thumb.jpg" alt="alt")
								.form__files
									label.form__file-label
										span.form__false-file
											+icon('exit')
										input(type="file" name="" class="form__file" placeholder="Загрузить фото")


					.modal__bottom
						button(type="button").btn.modal__action Добавить
						.modal__message.modal__message--success Товар успешно добавлен
						//- button(type="button").btn.btn-gray.modal__action Отмена
