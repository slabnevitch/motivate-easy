mixin modal-withdrawal()
	#modal-withdrawal.modal.micromodal-slide(aria-hidden='true')
		.modal__overlay(tabindex='-1' data-micromodal-close)
			.modal__container(role='dialog' aria-modal='true' aria-labelledby='modal-1-title')
				.modal__header
					button.modal__close(aria-label='Close modal'  data-micromodal-close)
						+icon('close')
					.modal__title Снятие Кронов
				main.modal__content
					form(action="#" class="form form-columns")
						//- label.form__label(for="withdrawal-field") Кроны
						//- input(id="withdrawal-field" autocomplete="off" type="text" name="kron-count" class="form__input" placeholder="Количество кронов")

						.form__column
							label.form__label(for="withdrawal-crons-field") Кроны
							input(id="withdrawal-crons-field" autocomplete="off" type="text" name="cron-count" class="form__input" placeholder="Количество кронов")

						.form__column
							label.form__label(for="withdrawal-event-field") Событие
							input(id="withdrawal-events-field" autocomplete="off" type="text" name="cron-event" class="form__input" placeholder="Событие")

						.form__block
							label.form__label(for="withdrawal-description") Описание
							textarea(id="withdrawal-description" autocomplete="off"  name="cron-descrption" class="form__area" placeholder="Описание товара")

						.modal__bottom
							button(type="submit").btn.btn-red.modal__action сНЯТЬ
							.modal__message.modal__message--error Ошибка снятия кронов, баланс уходит в минус
							//- button(type="button").btn.btn-gray.modal__action Отмена

