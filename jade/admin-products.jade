extends _misc/main

block title
	| Админ - Товары
	- var page = 'admin';

block content
	.admin-products
		.admin-products__wrapper
			.admin-products__header
				button(type="button" data-micromodal-open="product-create").btn.btn-sm.admin-products__add
					+icon('plus')
					| Добавить Товар
			
				.admin-products__filters
					.admin-products__filter.filter-admin-products
						.filter-admin-products__select
							select(data-searchdisable="true" class="fstdropdown-select")
								- let opts = ['all', 'some', 'else', 'some-else'];
									each opt in opts
										option(value=opt)= opt
						.filter-admin-products__label
							| Filter:
							+icon('filter')

					.admin-products__filter.filter-admin-products
						.filter-admin-products__select
							select(data-searchdisable="true" class="fstdropdown-select")
								- let opts2 = ['a-z', 'z-a'];
									each opt in opts2
										option(value=opt)= opt
						
						.filter-admin-products__label.filter-admin-products__label--sort
							| Sort:
							+icon('sort')

			.admin-products__table
				.table
					.table__header.header-table
						- let headerCols = ['Actions', 'Наименование', 'Цена', 'Статус', 'Количество', 'Дата создания'];
						.header-table__row
							each col in headerCols
								.header-table__column= col
					
					.table__body.body-table
						- let bodyCols = ['Ручка', '1500', 'Активна', '21', '19/09/2022'];
						- for (var i=0; i < 9; i++)
							.body-table__row
								.body-table__column
									.body-table__label Actions
									button.body-table__button(type="button" data-micromodal-open="product-edit")
										+icon('edit')
									button.body-table__button(type="button")
										+icon('delete')

								each col, ind in bodyCols
									//- if ind > 0
									.body-table__column
										.body-table__label= headerCols[ind + 1]
										.body-table__val= col

			+pagination([1, 2, 3, 4, 5], '', 'chev-left', 'chev-right')

	include _misc/modals
	+product-edit()
	+product-create()
