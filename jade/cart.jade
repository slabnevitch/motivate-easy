extends _misc/main

block title
	| Корзина
	- var page = 'cart';
	- var index = 4;
	
block content
	.cart
		.cart__wrapper
			.cart__content
				.cart__table
					.table
						.table__header.header-table
							- let headerCols = ['Действие', 'Наименование', 'Цена', 'Количество'];
							.header-table__row
								each col in headerCols
									.header-table__column= col
						
						.table__body.body-table
							- for (var i=0; i <9 ; i++)
								.body-table__row
										.body-table__column
											.body-table__label Действие
											.body-table__val
												form.body-table__form(action="#")
													button.body-table__button(type="submit")
														+icon('delete')

										.body-table__column
											.body-table__label Наименование
											.body-table__val Ручка
										.body-table__column
											.body-table__label Цена
											.body-table__val 55
										.body-table__column
											.body-table__label Количество
											.body-table__val
												.counter(data-min="0" data-max="100")
													span.counter__button.counter-minus
														+icon('counter-down')
													.counter__block
														input(autocomplete="off" type="hidden" name="name" value="1" )
														.counter__count 1
													span.counter__button.counter-plus
														+icon('counter-up')

				
				.cart__info.info-cart
					.info-cart__title Покупка
					.info-cart__table
						.info-cart__key Итог
						.info-cart__val 24452
						.info-cart__key Остаток после оплаты
						.info-cart__val 13894
					
					.info-cart__bottom
						button.info-cart__button(type="button") ОПЛАТИТЬ
			
			// +pagination([1, 2, 3, 4, 5], '', 'chev-left', 'chev-right')

